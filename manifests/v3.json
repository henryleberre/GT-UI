{
    "manifest_version": 3,

    "name": "GT UI",
    "version": "1.0",

    "icons": {
		"128": "gtui_icons/icon128x128.png",
		"64":  "gtui_icons/icon64x64.png",
		"48":  "gtui_icons/icon48x48.png",
		"32":  "gtui_icons/icon32x32.png",
		"16":  "gtui_icons/icon16x16.png"
	},

    "content_scripts": [
        {
            "matches": [
                "https://oscar.gatech.edu/*"
            ],
            "js": [
                "src/main.js"
            ]
        }
    ],
    
    "web_accessible_resources": [
        {
            "resources": [
                "src/gtui.html",
                "src/gt-logo.svg",
                "src/github-logo.svg"
            ],
            "matches": [
                "https://oscar.gatech.edu/*"
            ]
        }
    ]
}