{
    "manifest_version": 3,
    "name": "OSCAR+",
    "version": "2.0",
    "icons": {
        "128": "icons/icon128x128.png",
        "64":  "icons/icon64x64.png",
        "48":  "icons/icon48x48.png",
        "32":  "icons/icon32x32.png",
        "16":  "icons/icon16x16.png"
    },
    "content_scripts": [{
        "matches": [
            "https://oscar.gatech.edu/*"
        ],
        "css": [
            "content/tailwind.min.css"
        ],
        "js": [
            "content/index.js"
        ]
    }],
    "web_accessible_resources": [{
        "resources": [    
            "content/index.html",

            "res/gt-logo.svg",
            "res/github-logo.svg"
        ],
        "matches": [
            "https://oscar.gatech.edu/*"
        ]
    }],
    "action": {
        "default_icon": {
            "128": "icons/icon128x128.png",
            "64":  "icons/icon64x64.png",
            "48":  "icons/icon48x48.png",
            "32":  "icons/icon32x32.png",
            "16":  "icons/icon16x16.png"
        },
        "default_title": "GT UI",
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "storage"
    ]
}